{
	"plugins": ["prettier"],
	"extends": ["prettier", "plugin:prettier/recommended"],
	"rules": {
		"prettier/prettier": "error",
		"no-undef": "error",
		"array-element-newline": "consistent"
	},
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"es6": true
	},
	"globals": {
		"Phaser": true
	}
}
